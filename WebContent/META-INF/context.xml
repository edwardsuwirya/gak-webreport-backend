<Context reloadable="true">
    <Resource
            name="jdbc/5asec"
            auth="Container"
            type="javax.sql.DataSource"
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
            username="root"
            password="admin123"
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/5asec"
            maxActive="500"
            initialSize="10"
            maxIdle="10"
            maxWait="60000"
            testWhileIdle="true"
            testOnBorrow="true"
            testOnReturn="false"
            validationQuery="SELECT 1"
            validationInterval="30000"
            timeBetweenEvictionRunsMillis="30000"
            minEvictableIdleTimeMillis="30000"
            defaultAutoCommit="false"
            defaultTransactionIsolation="READ_COMMITTED"
            removeAbandonedTimeout="90"
            removeAbandoned="false"
            logAbandoned="false"
    />

    <Resource
            name="jdbc/5asecMssql"
            auth="Container"
            type="javax.sql.DataSource"
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
            username="sa"
            password="admin123"
            driverClassName="net.sourceforge.jtds.jdbc.Driver"
            url="jdbc:jtds:sqlserver://localhost:1433/5asec;instance=MSSQLSERVER"
            maxActive="500"
            initialSize="10"
            maxIdle="10"
            maxWait="60000"
            testWhileIdle="true"
            testOnBorrow="true"
            testOnReturn="false"
            validationQuery="SELECT 1"
            validationInterval="30000"
            timeBetweenEvictionRunsMillis="30000"
            minEvictableIdleTimeMillis="30000"
            defaultAutoCommit="false"
            defaultTransactionIsolation="READ_COMMITTED"
            removeAbandonedTimeout="90"
            removeAbandoned="false"
            logAbandoned="false"
    />
</Context>